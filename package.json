{
  "name": "cloaks-gambit-api",
  "version": "1.0.0",
  "description": "REST API application with Node.js and MongoDB",
  "main": "src/server.js",
  "scripts": {
    "build:shared": "node scripts/build-shared-constants.js",
    "start": "npm run build:shared && node src/server.js",
    "dev": "nodemon --watch shared/constants/game.json --exec \"node scripts/build-shared-constants.js && node src/server.js\"",
    "test": "npm run build:shared && node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "migrate:guests": "node scripts/migrations/mark-guest-accounts.js"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "google-auth-library": "^9.3.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.1.0",
    "morgan": "^1.10.0",
    "winston": "^3.17.0",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.1"
  }
}
